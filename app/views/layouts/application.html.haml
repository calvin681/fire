!!! 5

%html{ "xmlns:fb" => "http://ogp.me/ns/fb#" }
  %head
    %title LN Timeline
    = stylesheet_link_tag("application")
    = javascript_include_tag("application")
    = javascript_include_tag("//platform.twitter.com/widgets.js")
    = javascript_include_tag("http://platform.linkedin.com/in.js")
    = csrf_meta_tag
    = favicon_link_tag 'favicon.ico'
    = yield :head
    
  %body
    #content{ :class => "#{controller_name}-#{action_name}" }
      - if notice.present?
        %p.notice= notice
      - if alert.present?
        %p.alert= alert
      = yield
      
      .footer-spacer
    .footer
      &copy; #{Time.now.year}, LN Timeline
      &nbsp;|&nbsp;
      = mail_to "xxxxx", "Feedback"
